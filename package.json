{
  "name": "photobooth",
  "version": "1.0.0",
  "description": "A production-ready photobooth application similar to dslrBooth",
  "main": "dist/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:main\"",
    "dev:renderer": "webpack serve --mode development --config webpack.renderer.config.js",
    "dev:main": "webpack --mode development --config webpack.main.config.js --watch",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "webpack --mode production --config webpack.renderer.config.js",
    "build:main": "webpack --mode production --config webpack.main.config.js",
    "start": "electron dist/main.js",
    "package": "electron-builder",
    "package:mac": "electron-builder --mac",
    "package:win": "electron-builder --win",
    "package:linux": "electron-builder --linux",
    "clean": "rimraf dist"
  },
  "keywords": [
    "photobooth",
    "electron",
    "react",
    "typescript",
    "camera"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.2.0",
    "css-loader": "^6.8.0",
    "electron": "^39.2.4",
    "electron-builder": "^24.6.0",
    "eslint": "^8.45.0",
    "eslint-plugin-react": "^7.33.0",
    "html-webpack-plugin": "^5.5.0",
    "rimraf": "^5.0.0",
    "style-loader": "^3.3.0",
    "ts-loader": "^9.4.0",
    "typescript": "^5.1.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0",
    "webpack-dev-server": "^5.2.2"
  },
  "dependencies": {
    "canvas": "^2.11.0",
    "node-gyp": "^9.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sharp": "^0.32.0"
  },
  "build": {
    "appId": "com.yourcompany.photobooth",
    "productName": "PhotoBooth",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.photography"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
